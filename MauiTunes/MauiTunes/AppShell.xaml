<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiTunes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiTunes"
    xmlns:views="clr-namespace:MauiTunes.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"/>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:SearchView}"
        Route="Search"/>

    <ShellContent
        Title="Player"
        ContentTemplate="{DataTemplate views:PlayerView}"
        Route="PlayerView"/>


</Shell>
